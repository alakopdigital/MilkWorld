<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/anoMain_nsv"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AnotherMainActivity"
    tools:showIn="@layout/app_bar_another_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <TextView
            android:textColor="#000000"
            android:text=" 0 items to be delivered tomorrow \n here date displays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:id="@+id/anoMain_tv"
            />

        <com.synnapps.carouselview.CarouselView
          android:id="@+id/anoMain_cv"
          android:layout_height="250dp"
          android:layout_width="match_parent"
          app:fillColor="@color/fillcircle"
          app:radius="5dp"
          app:slideInterval="2000"
          app:strokeColor="@color/strokecolor"
          app:strokeWidth="@dimen/cl"
        />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Dairy Products"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/first_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:msrv_gravity="start"
                app:msrv_ms_per_inch="@dimen/normal_speed"
                app:msrv_snap_count="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Breakfast"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/second_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:msrv_gravity="center"
                app:msrv_ms_per_inch="@dimen/low_speed"
                app:msrv_snap_count="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Fresh items"
            android:textStyle="bold"
            android:textSize="16sp" />

        <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
            android:id="@+id/third_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:msrv_gravity="center"
            app:msrv_ms_per_inch="@dimen/low_speed"
            app:msrv_snap_count="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Essentials"
            android:textStyle="bold"
            android:textSize="16sp" />

        <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
            android:id="@+id/fourth_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:msrv_gravity="center"
            app:msrv_ms_per_inch="@dimen/low_speed"
            app:msrv_snap_count="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Packaged Food"
            android:textStyle="bold"
            android:textSize="16sp" />

        <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
            android:id="@+id/fifth_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:msrv_ms_per_inch="@dimen/low_speed"
            app:msrv_snap_count="5" />

        <!-- <android.support.v7.widget.RecyclerView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:scrollbars="horizontal"
             android:id="@+id/contentAnoMain_rv"
             >

         </android.support.v7.widget.RecyclerView>-->

    </LinearLayout>
</ScrollView>